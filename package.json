{
  "name": "churchhymnal",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "preact-compat": "^3.16.0",
    "react-router-dom": "^4.1.1",
    "styled-components": "^1.4.4"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-preset-react-app": "^3.0.1",
    "change-case": "^3.0.1",
    "git-directory-deploy": "^1.5.1",
    "gray-matter": "^3.0.2",
    "markdown-it": "^8.3.1",
    "prep": "^1.6.0",
    "prettier": "^1.5.2",
    "react-app-rewire-preact": "^1.0.1",
    "react-app-rewired": "^1.0.5",
    "react-scripts": "^1.0.10",
    "standard": "^10.0.2",
    "sw-precache": "^5.2.0"
  },
  "scripts": {
    "start": "npm run compile-posts && react-app-rewired start",
    "build": "npm run compile-posts && react-app-rewired build && sw-precache --root='build/' --static-file-globs='build/**/!(*map*)'",
    "deploy": "npm run build && git-directory-deploy --directory build --branch gh-pages",
    "watch": "nodemon -w ./posts -e .markdown,.md --exec 'npm run compile-posts'",
    "lint": "standard",
    "format": "prettier --single-quote --write src/**/*.js && standard --fix",
    "compile-posts": "node ./compileMarkdown.js"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "fetch",
      "it"
    ]
  }
}
